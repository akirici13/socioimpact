<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <!-- Here you put the rest of your current view-->

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.dmpact.openxcdmpact.dummy.MainActivity"
        tools:showIn="@layout/app_bar_left_menu">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="70dp"
            android:orientation="vertical">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/pointListView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#e6616161"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/pointImage"
                    android:layout_width="120dp"
                    android:layout_height="160dp"
                    android:layout_margin="10dp"
                    android:src="@android:drawable/btn_star_big_on" />

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/pointValue"
                        android:layout_width="190dp"
                        android:layout_height="80dp"
                        android:gravity="center"
                        android:text="Large Text"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                    <TextView
                        android:id="@+id/pointComment"
                        android:layout_width="190dp"
                        android:layout_height="80dp"
                        android:gravity="center"
                        android:text="Points Gained From Last Travel"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/avgSpeedListView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#e6616161"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/avgSpeedImage"
                    android:layout_width="120dp"
                    android:layout_height="160dp"
                    android:layout_margin="10dp"
                    android:src="@android:drawable/ic_menu_directions" />

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/avgSpeedValue"
                        android:layout_width="190dp"
                        android:layout_height="80dp"
                        android:gravity="center"
                        android:text="Large Text"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                    <TextView
                        android:id="@+id/avgSpeedComment"
                        android:layout_width="190dp"
                        android:layout_height="80dp"
                        android:gravity="center"
                        android:text="Average Speed (km/h)"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/pedalPositionListView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#e6616161"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/pedalPositionImage"
                    android:layout_width="120dp"
                    android:layout_height="160dp"
                    android:layout_margin="10dp"
                    android:src="@android:drawable/btn_dialog" />

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/pedalPositionValue"
                        android:layout_width="190dp"
                        android:layout_height="80dp"
                        android:gravity="center"
                        android:text="Large Text"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                    <TextView
                        android:id="@+id/pedalPositionComment"
                        android:layout_width="190dp"
                        android:layout_height="80dp"
                        android:gravity="center"
                        android:text="Acceleration Aggresiveness (%)"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/CO2EmissionListView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#e6616161"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/CO2EmissionImage"
                    android:layout_width="120dp"
                    android:layout_height="160dp"
                    android:layout_margin="10dp"
                    android:src="@android:drawable/ic_lock_power_off" />

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/CO2EmissionValue"
                        android:layout_width="190dp"
                        android:layout_height="80dp"
                        android:gravity="center"
                        android:text="Large Text"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                    <TextView
                        android:id="@+id/CO2EmissionComment"
                        android:layout_width="190dp"
                        android:layout_height="80dp"
                        android:gravity="center"
                        android:text="CO2 Emission (g/km)"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/fuelConsumptionView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#e6616161"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/fuelConsumptionImage"
                    android:layout_width="120dp"
                    android:layout_height="160dp"
                    android:layout_margin="10dp"
                    app:srcCompat="@drawable/ic_menu_send" />

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/fuelConsumptionValue"
                        android:layout_width="190dp"
                        android:layout_height="80dp"
                        android:gravity="center"
                        android:text="Large Text"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                    <TextView
                        android:id="@+id/fuelConsumptionComment"
                        android:layout_width="190dp"
                        android:layout_height="80dp"
                        android:gravity="center"
                        android:text="Fuel Consumption (l/100km)"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/odometerListView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#e6616161"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/odometerImage"
                    android:layout_width="120dp"
                    android:layout_height="160dp"
                    android:layout_margin="10dp"
                    android:src="?android:attr/homeAsUpIndicator" />

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/odometerValue"
                        android:layout_width="190dp"
                        android:layout_height="80dp"
                        android:gravity="center"
                        android:text="Large Text"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                    <TextView
                        android:id="@+id/odometerComment"
                        android:layout_width="190dp"
                        android:layout_height="80dp"
                        android:gravity="center_vertical"
                        android:text="Trip Distance (Km)"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</ScrollView>