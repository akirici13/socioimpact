<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <!-- Here you put the rest of your current view-->

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.dmpact.openxcdmpact.dummy.RewardsActivity"
        tools:showIn="@layout/app_bar_left_menu">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="70dp"
            android:orientation="vertical">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/firm1View"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_green_dark"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/firm1Image"
                    android:layout_width="120dp"
                    android:layout_height="160dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/tema" />

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/firm1Name"
                        android:layout_width="190dp"
                        android:layout_height="80dp"
                        android:gravity="center"
                        android:text="Bilinçli Bireyler, Sürdürülebilir Yaşam"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                    <TextView
                        android:id="@+id/firm1Comment"
                        android:layout_width="190dp"
                        android:layout_height="80dp"
                        android:gravity="center_horizontal"
                        android:text="Topladığınız 500 puan karşılığında TEMA, sizin için bir ağaç dikiyor"
                        android:textAppearance="@android:style/TextAppearance.Material.Medium" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/firm2View"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/firm2Image"
                    android:layout_width="120dp"
                    android:layout_height="160dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/sigorta" />

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/firm2Name"
                        android:layout_width="190dp"
                        android:layout_height="80dp"
                        android:gravity="center"
                        android:text="Sorumlu Sürücü, Düşük Poliçe"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                    <TextView
                        android:id="@+id/firm2Comment"
                        android:layout_width="190dp"
                        android:layout_height="80dp"
                        android:gravity="center_horizontal"
                        android:text="30 hatasız sürüş sebebiyle poliçeniz %25 indirimli"
                        android:textAppearance="@android:style/TextAppearance.Material.Medium" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/firm3View"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_orange_light"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/firm3Image"
                    android:layout_width="120dp"
                    android:layout_height="160dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/yemeksepeti" />

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/firm3Name"
                        android:layout_width="190dp"
                        android:layout_height="80dp"
                        android:gravity="center"
                        android:text="Aracını Çıkarma, Biz Yanı Başındayız"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                    <TextView
                        android:id="@+id/firm3Comment"
                        android:layout_width="190dp"
                        android:layout_height="80dp"
                        android:gravity="center"
                        android:text="150 puan karşılığında seçili restaurantlarda %15 indirim"
                        android:textAppearance="@android:style/TextAppearance.Material.Medium" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</ScrollView>
