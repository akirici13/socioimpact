<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Hello User"
        android:textSize="40dp"
        android:layout_marginTop="60dp" />

    <TextView
        android:id="@+id/tv_last_session"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv_name"
        android:text="Last Session Information:"
        android:textSize="20dp"
        android:layout_marginTop="10dp" />


    <TextView
        android:id="@+id/tv_avg_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv_last_session"
        android:layout_marginTop="10dp"
        android:text="Average Speed (km/h)" />

    <TextView
        android:id="@+id/tv_pedal_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_avg_speed"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Average Pedal Position" />

    <TextView
        android:id="@+id/tv_co2_emission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_pedal_position"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="CO2 Emission (km/l)" />


    <TextView
        android:id="@+id/tv_fuel_consumption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_co2_emission"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Fuel Consumption (km/l)" />

    <TextView
        android:id="@+id/tv_odometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_fuel_consumption"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Trip Distance (km)" />

    <Button
        android:id="@+id/button_rewards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_odometer"
        android:layout_marginTop="20dp"
        android:text="Rewards"
        android:layout_alignLeft="@id/tv_last_session"/>

    <Button
        android:id="@+id/button_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_odometer"
        android:layout_marginTop="20dp"
        android:text="Profile"
        android:layout_alignRight="@id/tv_last_session"/>


</RelativeLayout>